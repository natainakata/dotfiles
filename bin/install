#!/bin/bash

DOT_DIR="$HOME/.dotfiles"

has() {
  type "$1" > /dev/null 2>&1
}

if [ ! -d ${DOT_DIR} ]; then
  if has "git"; then
    git clone https://github.com/natainakata/dotfiles.git ${DOT_DIR}
  else
    echo "git required"
    exit 1
  fi
  cd ${DOT_DIR}

  make install

  # . "$HOME/.asdf/asdf.sh"
	# cat $HOME/.tool-versions | awk '{print $1}' | xargs -I X asdf plugin add X
	# asdf install
else
  echo "dotfiles already exists"
  exit 1
fi
